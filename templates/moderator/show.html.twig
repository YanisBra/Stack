{% block title %}Moderator{% endblock %}

{% block body %}
    <h1>Moderator</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ moderator.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ moderator.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ moderator.roles ? moderator.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ moderator.password }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ moderator.firstName }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ moderator.lastName }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ moderator.username }}</td>
            </tr>
            <tr>
                <th>Domain</th>
                <td>{{ moderator.domain }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_moderator_index') }}">back to list</a>

    <a href="{{ path('app_moderator_edit', {'id': moderator.id}) }}">edit</a>

